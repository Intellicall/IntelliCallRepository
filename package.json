{
  "name": "intellicall",
  "version": "1.0.0",
  "description": "IntelliCall AI-powered call center platform",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w backend\" \"npm run dev -w frontend\"",
    "dev:backend": "npm run dev -w backend",
    "dev:frontend": "npm run dev -w frontend",
    "build": "npm run build -w backend && npm run build -w frontend",
    "build:backend": "npm run build -w backend",
    "build:frontend": "npm run build -w frontend",
    "start": "npm run start -w backend",
    "start:backend": "npm run start -w backend",
    "typeorm": "npm run typeorm -w backend",
    "migration:generate": "npm run migration:generate -w backend",
    "migration:run": "npm run migration:run -w backend",
    "migration:revert": "npm run migration:revert -w backend"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
